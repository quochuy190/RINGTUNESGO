<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/dp3"
    android:layout_marginLeft="@dimen/dp3"
    android:layout_marginBottom="@dimen/dp7"
    android:background="@drawable/spr_item_groupt"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/id_relative_itemhome"
        app:cardCornerRadius="@dimen/dp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:background="@drawable/spr_radius_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/item_home_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120" />
            <TextView
                android:singleLine="true"
                android:id="@+id/item_home_name"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Hương Tràm - tuyển tập"
                android:padding="@dimen/dp5"
                android:textSize="@dimen/text_14sp"
                android:layout_alignBottom="@+id/item_home_photo"
                android:background="@color/background_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_marginTop="@dimen/dp5"
        android:padding="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        android:gravity="left"
        android:layout_below="@id/id_relative_itemhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_counter_home"
            android:textColor="@color/text_home"
            android:textSize="@dimen/text_13sp"
            android:text="25 bài"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp3"
            android:layout_marginRight="@dimen/dp3"
            android:textColor="@color/text_home"
            android:textSize="@dimen/text_13sp"
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_hits_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2545 lượt tải"
            android:textColor="@color/text_home"
            android:textSize="@dimen/text_13sp" />
    </LinearLayout>




</RelativeLayout>