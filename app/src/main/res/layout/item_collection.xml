<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spr_item_groupt"
    android:orientation="horizontal">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/img_play_item_ringtunes"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:padding="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:src="@drawable/icon_download" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_img_collection"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:padding="@dimen/dp10"
                    android:src="@mipmap/ringtunes_final" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="@dimen/dp3"
                        android:id="@+id/item_name_collection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="We don't talk any more"
                        android:textColor="@color/text_name_song"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginBottom="@dimen/dp1"
                        android:id="@+id/item_singer_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:text="Selena Gomez ft Charlie Puth"
                        android:textSize="@dimen/text_14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp3"
                        android:layout_marginTop="@dimen/dp1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_time_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Lượt tải: 1000"
                            android:textSize="@dimen/text_11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginRight="@dimen/dp5"
                            android:text="|"
                            android:textSize="@dimen/text_11sp" />

                        <TextView
                            android:id="@+id/item_price_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá: 3000 VND"
                            android:textSize="@dimen/text_11sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>