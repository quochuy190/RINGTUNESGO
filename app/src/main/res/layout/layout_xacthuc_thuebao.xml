<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/app_bar_main2"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/img_logo"
                android:src="@drawable/banner"
                android:layout_below="@+id/relative_tabbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/text_name_song"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30"
                android:textSize="@dimen/text_16sp"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="Ringtunes chỉ dành cho các thuê bao VinaPhone. Mời các bạn chọn hình thức đăng nhập"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_vina_portal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp30"
                android:background="@drawable/spr_green"
                android:gravity="center"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text="XÁC THỰC QUA TÀI KHOẢN VINAPHONE PORTAL"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp_xacthuc"/>
            <TextView
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:id="@+id/txt_otp"
                android:background="@drawable/spr_tim"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:gravity="center"
                android:text="XÁC THỰC QUA TIN NHẮN OTP"
                android:textSize="@dimen/text_20sp_xacthuc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"/>
            <TextView
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:id="@+id/txt_vina_3g"
                android:background="@drawable/spr_cam"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:gravity="center"
                android:text="XÁC THỰC QUA MẠNG VINAPHONE 3G"
                android:textSize="@dimen/text_20sp_xacthuc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>