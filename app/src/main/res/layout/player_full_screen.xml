<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_full_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/tab_bar_detailsong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <include layout="@layout/app_bar_main2" />


        <TextView
            android:id="@+id/txt_title_detailsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp35"
            android:padding="@dimen/dp5"
            android:text="Playing Now"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_backgroup_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_bar_detailsong"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_bar_detailsong"
        android:background="@color/backgroud_search">

        <LinearLayout
            android:id="@+id/linner_img_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp50"
            android:orientation="horizontal"
            android:padding="@dimen/dp5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_songs_full_screen"
                android:layout_width="@dimen/dp200_singer"
                android:layout_height="@dimen/dp200_singer"
                android:padding="@dimen/dp5"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_namesong_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linner_img_full"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp30"
            android:text="Tên bài hát"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_namesinger_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_namesong_full"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp20"
            android:text="Tên bài hát"
            android:textColor="@color/white_backgroup"
            android:textSize="@dimen/text_15sp" />

        <LinearLayout
            android:id="@+id/linner_play_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_namesinger_full"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp30">

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp2"
                android:padding="@dimen/dp2"
                android:src="@drawable/pause_adapter" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp2"
                    android:layout_marginRight="@dimen/dp2"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/songCurrentDurationLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0:00"
                            android:textColor="@color/white_backgroup" />

                        <SeekBar
                            android:id="@+id/player_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp30"
                            android:layout_marginRight="@dimen/dp30"
                            android:backgroundTint="@color/white_backgroup"
                            android:max="100"
                            android:progressBackgroundTint="@color/white_backgroup" />

                        <TextView
                            android:id="@+id/songTotalDurationLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="5:00"
                            android:textColor="@color/white_backgroup" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_back_full"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp35"
            android:layout_below="@+id/linner_play_full"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/button_continue"
            android:text="Trở lại"
            android:textColor="@color/white_backgroup"
            android:textSize="@dimen/text_18sp" />
    </RelativeLayout>

</RelativeLayout>