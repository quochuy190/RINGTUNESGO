<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_canhan"
    android:background="@color/bg_progress"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_background_canhan"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txt__title_canhan"
        android:layout_marginTop="@dimen/dp30"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:text="Bạn chưa đăng nhập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_canhan"
        android:layout_below="@id/txt__title_canhan"
        android:layout_marginTop="@dimen/dp50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/btn_dangnhap"
        android:background="@drawable/spr_login"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp30"
        android:textSize="@dimen/text_20sp"
        android:text="ĐĂNG NHẬP"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:paddingRight="@dimen/dp60"
        android:paddingLeft="@dimen/dp60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>