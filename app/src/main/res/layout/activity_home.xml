<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.neo.media.untils.CustomViewPager

        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp50">


    </com.neo.media.untils.CustomViewPager>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/tab_homefragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.neo.media.untils.CustomTabLayout
            android:paddingTop="@dimen/dp3"
            android:id="@+id/tablayout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@color/white"
            app:popupTheme="@style/PopupOverlay"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/purple"
            app:tabTextAppearance="@style/text_tab_layout"
            app:tabTextColor="@color/text_home" />


    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:layout_above="@+id/tab_homefragment"
        android:background="@drawable/below_shadow">

    </View>


</RelativeLayout>