<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/spr_item_groupt"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp3"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_img_ringtunes"
                    android:padding="@dimen/dp5"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@mipmap/ringtunes_final" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8_playing"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/item_name_ringtunes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name Songs"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp"/>

                    <TextView
                        android:id="@+id/item_singer_ringtunes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:text="Name Singer"
                        android:textSize="@dimen/text_12sp" />

                    <LinearLayout
                        android:layout_marginBottom="@dimen/dp3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_counter_ringtunes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Lượt tải: 0"
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginRight="@dimen/dp5"
                            android:text="|"
                            android:textSize="@dimen/text_12sp" />

                        <TextView
                            android:id="@+id/item_price_ringtunes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá: 0 VND"
                            android:textSize="@dimen/text_12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/img_play_item_ringtunes"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:padding="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp3"
                        android:src="@drawable/icon_download" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



</LinearLayout>