<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/app_bar_main2"/>
        <ImageView
            android:id="@+id/img_back_info"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp14"
            android:src="@drawable/back_white"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45" />
        <TextView
            android:layout_marginLeft="@dimen/dp50"
            android:layout_centerVertical="true"
            android:id="@+id/txt_title_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:text="ABC"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp"
            android:visibility="visible" />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_notification_info"
        android:visibility="gone"
        android:padding="@dimen/dp10"
        android:textSize="@dimen/text_18sp"
        android:textColor="@color/text_name_song"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tab_bar_group"
        android:text="Bạn chưa đăng ký dịch vụ Ringtunes"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:src="@drawable/ringtunes_go_icon"
        android:textColor="@color/ringtunes"
        android:textSize="@dimen/text_34sp"
        android:text="RingtunesGo"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/text_color1"
            android:id="@+id/ecFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Nhập Tên"
            android:inputType="text" />

        <TextView
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/text_color1"
            android:text="SĐT: 0942148362"
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/txt_phone_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:textColor="@color/text_color1"
            android:textSize="@dimen/text_17sp"
            android:text="Ngày đăng ký: 2017 - 14 - 8"
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/txt_date_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Giới tính: "
                android:textSize="@dimen/text_17sp"
                android:textColor="@color/text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_marginLeft="@dimen/dp5"
                android:textSize="@dimen/text_17sp"
                android:textColor="@color/text_color1"
                android:id="@+id/spinnerSex"
                android:layout_width="@dimen/dp200_singer"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ngày sinh: "
                android:textSize="@dimen/text_17sp"
                android:textColor="@color/text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginLeft="@dimen/dp5"
                android:textSize="@dimen/text_17sp"
                android:textColor="@color/text_color1"
                android:id="@+id/editTextBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="- Nhập vào ngày sinh"
                android:inputType="text" />
        </LinearLayout>


       <Button
           android:textColor="@color/white"
           android:text="Cập nhật"
           android:layout_marginTop="@dimen/dp30"
           android:background="@drawable/button_continue"
           android:id="@+id/btn_update_info"
           android:layout_gravity="center"
           android:layout_width="@dimen/dp150"
           android:layout_height="@dimen/dp40" />
    </LinearLayout>


</LinearLayout>