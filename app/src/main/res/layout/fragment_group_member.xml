<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/tab_bar_groupmemer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <include layout="@layout/app_bar_main2" />

            <ImageView
                android:id="@+id/img_back_group_member"
                android:padding="@dimen/dp14"
                android:src="@drawable/back_white"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txt_title_tabar_groupmember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp50"
                android:padding="@dimen/dp5"
                android:text="ABC"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/add_group_member"
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:padding="@dimen/dp8_playing"
                android:src="@drawable/setup_purple" />
        </RelativeLayout>

        <LinearLayout

            android:id="@+id/linner_member_groupmember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_bar_groupmemer"
            android:orientation="vertical">
            <View
                android:background="@color/background_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"/>
            <TextView
                android:id="@+id/txt_title_group_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_bar_groupmemer"
                android:padding="@dimen/dp5"
                android:text="THÀNH VIÊN NHÓM"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_group_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_group_member">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linner_conllection_groupmember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linner_member_groupmember"
            android:layout_marginTop="@dimen/dp2"
            android:orientation="vertical">
            <View
                android:background="@color/background_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"/>
            <TextView
                android:id="@+id/txt_title_ringtunes_group_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="RINGTUNES CỦA NHÓM"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_ringtunes_group_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linner_them_baihat_groupmember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linner_conllection_groupmember"
            android:layout_marginTop="@dimen/dp2"
            android:orientation="vertical">
            <View
                android:background="@color/background_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"/>
            <TextView
                android:id="@+id/txt_title_thembaihat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="BÀI HÁT TƯƠNG TỰ"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_thembaihat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>