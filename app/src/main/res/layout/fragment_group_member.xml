<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tab_bar_groupmemer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <include layout="@layout/app_bar_main2" />

        <ImageView
            android:id="@+id/img_back_group_member"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp5"
            android:padding="@dimen/dp14"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_title_tabar_groupmember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp50"
            android:padding="@dimen/dp5"
            android:text="ABC"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/add_group_member"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="Chọn"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/tab_bar_groupmemer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linner_doitennhom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tab_bar_groupmemer"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tab_bar_groupmemer"
                    android:padding="@dimen/dp5"
                    android:text="Tên nhóm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/relative_doitennhom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/id_linner_add_contact"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/spr_backgroup_edittext">

                    <EditText
                        android:id="@+id/edt_doitennhom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp40"
                        android:backgroundTint="@color/white"
                        android:hint="-Nhập SĐT hoặc lấy từ danh bạ"
                        android:inputType="text"
                        android:padding="@dimen/dp5"
                        android:textColor="@color/text_name_song" />

                    <TextView
                        android:id="@+id/btn_doitennhom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp5"
                        android:padding="@dimen/dp5"
                        android:text="Lưu"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tab_bar_groupmemer"
                    android:padding="@dimen/dp5"
                    android:text="Thêm thành viên"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/relative_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/id_linner_add_contact"
                    android:layout_centerHorizontal="true">

                    <EditText

                        android:id="@+id/edt_themSDT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp55"
                        android:backgroundTint="@color/white"
                        android:hint="@string/txt_hint_getcontact"
                        android:inputType="phone"
                        android:padding="@dimen/dp5"
                        android:textColor="@color/text_name_song" />

                    <TextView
                        android:id="@+id/txt_delete_text"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="@dimen/dp35"
                        android:gravity="center_horizontal"
                        android:text="x"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_20sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_laydanhba"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp5"

                        android:src="@drawable/icon_contact"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/btn_them_sdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp5"
                        android:background="@drawable/spr_buton_dialog"
                        android:padding="@dimen/dp5"
                        android:text="OK"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linner_doiicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linner_doitennhom"
                android:layout_marginTop="@dimen/dp2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp2"
                    android:background="@color/background_item" />

                <TextView
                    android:id="@+id/txt_title_doiicon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="Đổi hình đại diện cho nhóm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_doihinhdaidien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linner_member_groupmember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linner_doiicon"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp2"
                    android:background="@color/background_item" />

                <TextView
                    android:id="@+id/txt_title_group_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tab_bar_groupmemer"
                    android:padding="@dimen/dp5"
                    android:text="Thành viên trong nhóm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_group_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_title_group_member">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linner_conllection_groupmember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linner_member_groupmember"
                android:layout_marginTop="@dimen/dp2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp2"
                    android:background="@color/background_item" />

                <TextView
                    android:id="@+id/txt_title_ringtunes_group_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="Chọn nhạc chờ cho nhóm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_ringtunes_group_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linner_time_groupmember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linner_conllection_groupmember"
                android:layout_marginTop="@dimen/dp2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp2"
                    android:background="@color/background_item" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="Cài đặt thời gian"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linner_them_baihat_groupmember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linner_time_groupmember"
                android:layout_marginTop="@dimen/dp2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp2"
                    android:background="@color/background_item" />

                <TextView
                    android:id="@+id/txt_title_thembaihat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:text="Thêm nhạc chờ cho nhóm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_thembaihat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:background="@drawable/spr_buton_dialog">

            <TextView
                android:id="@+id/btn_luuthaydoi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="LƯU THAY ĐỔI"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/purple" />

            <TextView
                android:id="@+id/btn_xoanhom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="XOÁ NHÓM"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_18sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>