<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp110"
    android:id="@+id/relative_event_all"
    android:layout_marginBottom="@dimen/dp3"
    android:background="@drawable/spr_item_groupt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <ImageView
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/img_photo_event_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:background="@color/backgroud_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/carview_img_event"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp8_playing"
                android:layout_marginBottom="@dimen/dp8_playing"
                app:cardCornerRadius="@dimen/dp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:id="@+id/img_event_photo"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60" />
            </android.support.v7.widget.CardView>
            <TextView
                android:textStyle="bold"
                android:id="@+id/txt_name_event"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/white"
                android:padding="@dimen/dp5"
                android:text="Ngày phụ nữ việt nam 20/10"
                android:layout_toRightOf="@+id/carview_img_event"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

</RelativeLayout>