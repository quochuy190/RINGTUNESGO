<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/app_bar_main2"/>
        <ImageView
            android:id="@+id/img_back_singerdetail"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp14"
            android:src="@drawable/back_white"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"/>
        <TextView
            android:layout_marginLeft="@dimen/dp50"
            android:layout_centerVertical="true"
            android:id="@+id/txt_title_singerdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:text="ABC"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/img_singer_detail"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp175"
        />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/tab_homefragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.design.widget.TabLayout

            android:background="@color/backgroup_buysongs"
            app:tabTextAppearance="@style/MyCustomTextAppearance"
            app:tabSelectedTextColor="@color/white"
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</LinearLayout>