<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/img_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:background="@color/backgroud_item_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/txt_title_welcome"
            android:textSize="@dimen/text_18sp"
            android:layout_centerHorizontal="true"
            android:text="LÀM CHỦ NHẠC CHỜ CỦA MÌNH"
            android:layout_marginTop="@dimen/dp50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp"
            android:id="@+id/txt_content_welcome"
            android:layout_below="@+id/txt_title_welcome"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</RelativeLayout>